<!DOCTYPE html>
<html>
<head>
  <title>TaskList</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" media="all">
</head>

<body id="gradient">
  <header id ="header-wrapper">
    <h1>FINISH YOUR LIFE THINGS</h1>
  </header>

  <main>

    <div id="nav-and-article-wrapper" class="clearfix">

      <nav id="main-nav">
        <header>
          <h2 class="increase-font">OPTIONS</h2>
        </header>
        <ul class="no-bullet">
          <li>
            <%= link_to "Add a task", new_task_path, class: "hvr-border-fade no-underline equal-width" %>
          </li>
          <li>
            <%= link_to "All tasks", tasks_path, class: "hvr-border-fade no-underline equal-width" %>
          </li>
        </ul>
      </nav>

      <div id="main-article-wrapper">

        <%= yield %>
        <%# Yield to the index %>
      </div>

    </main>
  </div>

  <footer id="main-footer">
    <p>
      &copy; COPYRIGHT 2017
    </p>
  </footer>

</body>
</html>
