  <main class="group">
    <div class="left">
      <section class="button">
        <h4><%= link_to('Add Task', new_task_path, alt: 'link to create new task') %></h4>
      </section>
      <section class="button">
        <h4><a href=''>All Tasks</a></h4>
      </section>
    </div>

    <div class="right">
      <%= yield %>
    </div>

  </main>

