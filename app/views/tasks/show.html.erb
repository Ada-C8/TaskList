<h2 class="task-heading"><%= @task[:name] %></h2>
<ul id="task-box">
    <li class="tasks">
      Description: <%= @task[:description] %>
    </li>
    <li class="tasks">
      Due by: <%= @task[:due_date] %>
    </li>

    <% if @task[:status] == "complete" %>
      <li class="tasks">
        Completed On: <%= @task[:completion_date] %>
      </li>
    <% end %>

    <div class="task-actions">
      <li class="action"><%= link_to "Edit", edit_task_path(@task.id) %></li>
    </div>
</ul>
