<div class="show">
  <h2>
  <%= "Task #{@task.id}: #{@task.name}" %>
  </h2>

<ul>
  <li>
    <%= "#{@task.description}" %>
  </li>
  <li>
    <% if @task.due_date == nil %>
      <p> No due date <p>
    <% else %>
      <p> Due: <%= @task.due_date.strftime("%A, %B %d, %Y") %> </p>
    <% end %>
  </li>
  <li>
    <%= link_to "Edit", edit_task_path %>
  </li>
</ul>


</div>
