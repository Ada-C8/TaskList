<section class="show_task">
  <% if @task %>
  <h2>
    Task: <%= @task.name %>
  </h2>
  <h2>
    Description: <%= @task.description %>
  </h2>
  <% if @task.completion_date == nil %>
  <h2>
    Due date: <%=@task.date%>
  </h2>
  <% end %>
  <% if @task.completion_date != nil %>
  <h2>Congrats! You completed this task on <%=@task.completion_date %>!</h2>
  <% end %>
  <%= link_to("Edit", edit_task_path(@task.id.to_i)) %>
  <%= link_to("Delete", remove_task_path(@task.id.to_i)) %>
  <%= link_to("Mark Complete", mark_complete_path(@task.id), method: :patch) %>
  <%end%>
</section>
