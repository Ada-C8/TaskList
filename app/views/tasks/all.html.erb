<section>
  <h2>Your Tasks</h2>
    <ol>
      <% @tasks.each do |task| %>
        <li>
          <p>
            <strong>
              <%= link_to task.task, task_path(task.id) %>
            </strong>
          </p>

      </li>
      <p>
        Details: <%= task.description %>
      </p>
      <p>
        <%= task.due %>
      </p>
    <% end %>
  </ol>
</section>

<nav>
  <%= link_to 'Home', tasks_path %> |
  <%= link_to 'Add', new_task_path %> |
  <%= link_to 'All tasks', all_tasks_path %>
</nav>
