<%= form_for @task do |f| %>
  <section class="form-item">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true, class: "transparent-input chalk-border" %>
  </section>
  <section class="form-item">
    <%= f.label :description %>
    <%= f.text_area :description, class: "transparent-input chalk-border no-resize" %>
  </section>
  <section class="form-item">
    <%= f.label :due_date %>
    <%= f.date_field :completion_date, min: Date.today, required: true, class: "transparent-input chalk-border" %>
  </section>
  <%= f.submit "#{action} task", class: "submit chalk-border" %>
<% end %>
