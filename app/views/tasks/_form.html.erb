<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completion_date %>
  <%= f.date_field :completion_date %>

  <label for="task_done" class="control control-checkbox">
      Done?
      <%= f.check_box :done %>
      <div class="control_indicator"></div>
  </label>

  <%= f.submit button_name, class: "button" %>
<% end %>
