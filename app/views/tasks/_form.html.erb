<section>
  <%= form_for @task do |f| %>

    <section>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </section>

    <section>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </section>

    <%= f.submit action_name if action_name == "New"%>
  <% end %>

</section>
