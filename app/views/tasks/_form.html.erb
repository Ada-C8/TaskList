<article class="content edit">

<%= form_for @task do |f| %>
  <%= f.label :owner %>
  <%= f.text_field :owner %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <hr />
  <%= select_date Date.today, prefix: :start_date %>
  <hr />
  <%= f.label :priority %>
  <%= f.text_field :priority %>

  <%= f.submit action_name %>
<% end %>

</article>
