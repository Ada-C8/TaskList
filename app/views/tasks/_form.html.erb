<!-- default button text variable -->
<% button_text ||= "The Button" %>

<%= form_for @task do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div>
  <%= f.label :due_date %>
  <%= f.text_field :due_date %>
</div>
<div>
  <%= f.label :status %>
  <%= f.text_field :status %>
</div>
  <%= f.submit button_text%>
<% end %>
