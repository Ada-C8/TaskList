<section>
  <%= form_for @task do |f| %>

    <section>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </section>

    <section>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </section>

    <% if action_name == "Edit" %>
      <section class = "input">
        <%= f.label "Completed?" %>:
        <%= f.select(:status, [true, false]) %>
      </section>
    <% end %>

    <%= f.submit action_name %>
  <% end %>

</section>
