
<%= form_with model: @task do |form| %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.label :due_date %><br>
    <%= form.text_field :due_date %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
