<div class="form">
  <h1 class='view_title'>Add Your Task!</h1>
  <%= form_for @task do |task| %>
  <p>
    <%= task.label :Task_Name %>
    <%= task.text_field :name %>
  </p>
  <p>
    <%= task.label :Task_Description %>
    <%= task.text_field :description %>
  </p>
  <p>
    <%= task.label :Due_Date %>
    <%= task.text_field :date %>
  </p>
  <div class="submit_container">
    <%= task.submit "Save Task", :class => "submit"%>
  </div>
  <% end %>
</div>
