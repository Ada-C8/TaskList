<%# use form_for for database interaction eg create, update, and destroy %>

<ul>
  <%= form_for @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :due_date %>
    <%= f.date_field :due_date %><br>

    <%= f.label :completed %>
    <%= f.check_box :completed %><br>


    <%= f.submit %>
  <% end %>
</ul>







<% if false %>

<!-- form_tag interprets Ruby code into an HTML tag form -->
<form action = "/tasks" method = "post" accept-charset="utf-8">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <label for="title">
    Title
  </label>
  <input type="text" name="task[title]" value="" id="title">

  <label for="description">
    Description
  </label>
  <input type="text" name="task[description]" value="" id="description">

  <label for="due_date">
    Due Date
  </label>
  <input type="date" name="task[due_date]" value="" id="due_date">

  <label for="completed">
    completed
  </label>
  <input type="checkbox" name="task[completed]" value="" id="completed">

  <input type="submit" value="Submit">


</form>

<% end %>
