<h1>Add New Task Your List</h1>
<!-- <p>Find me in app/views/tasks/new.html.erb</p> -->

<%= form_for @task do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit %>
<% end %>

<%= link_to "Home", tasks_path %>
