<main>
    <section class="new-task-form">
      <%= form_for @task, url: {action: "create"} do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_field :description %>

        <label for="task_done" class="control control-checkbox">
            Done?
            <input type="checkbox" id="task_done" name="task[done]" checked="checked" />
            <div class="control_indicator"></div>
        </label>
        <!-- <%= f.label :done %>
        <%= f.check_box :done %> -->
        <%= f.submit "Create Task", class: "button" %>
      <% end %>
    </section>
</main>
