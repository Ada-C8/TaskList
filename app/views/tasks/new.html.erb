<h2>new task</h2>

<%= form_for @task do |f| %>
  <%= f.label :task %>
  <%= f.text_field :task, placeholder: "task name here" %>

  <%= f.label :description %>
  <%= f.text_field :description, placeholder: "description here" %>

  <%= f.label :due %>
  <%= f.date_field :due %>

  <%= f.submit "Create"%>
<% end %>
