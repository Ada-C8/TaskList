<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">


  <label for="title">Title</label>
  <input type="text" name="title" value="" id="title">

  <label for="description">Description</label>
  <input type="text" name="description" value="" id="description">

  <label for="date">Date</label>
  <input type="text" name="date" value="" id="date">

  <label for="status">Status</label>
  <input type="checkbox" name="status" value="" id="status">

  <input type="submit" value="Submit">
</form>
