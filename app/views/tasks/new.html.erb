<h1>In the new tasks ERB file</h1>

<form action="/books" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">


  <label for="title">Title</label>
  <input type="text" name="title" value="" id="title">

  <label for="description">Description</label>
  <input type="text" name="description" value="" id="description">

  <label for="due_date">Due Date</label>
  <input type="text" name="due_date" value="" id="due_date">

  <label for="status">Task Status</label>
  <input type="text" name="status" value="" id="status">

  <input type="submit" value="Submit">
</form>
