<%= form_for @task do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :completion_date %>
<%= f.date_field :completion_date %>

<%= f.label :description %>
<%= f.text_field :description %>

<p><%= f.submit "Add Task" %></p>
<% end %>



