

  <%= form_tag tasks_path, method: :post do %>
  <%= label_tag "task[:title]", "Title" %>
  <%= text_field_tag "[title]" %>

  <%= label_tag "task[:description]", "Description" %>
  <%= text_field_tag "[description]" %>

  <%= label_tag "task[:date]", "Date" %>
  <%= text_field_tag "[date]" %>

  <%= submit_tag "Save Book", class: "book-button" %>

   <% end %>
