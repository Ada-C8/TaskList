<h1>Add New Task</h1>

<section>
  <%= form_for @task do |f| %>

    <section>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </section>

    <section>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </section>
    <%= f.submit %>
  <% end %>

</section>
