<h2>Add a new task:</h2>
<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">


  <label for="title">Title</label>
  <input type="text" name="title" value="" placeholder="eg: make dinner"id="title">


  <label for="description">Description</label>
  <input type="text" name="description" id="description">

  <label for="due_date">Due Date</label>
  <input type="date" name="due_date" value="" id="due_date">

  <!-- <label for="complete">Complete?</label>
  <input type="checkbox" name="complete" id="complete"> -->

  <input type="submit" value="Submit">
</form>
