<h1>Maria's Task List</h1>

<section id="lists">

<% @tasks.each do |task| %>
  <li>
   <%= link_to(task.name, task_path(task.id)) %>
   <!-- if_this_is_a_true_value ? then_the_result_is_this : else_it_is_this -->
   <%= button_to task.completed ? "Task complete" : "Unmark completed", mark_complete_path(task.id), method: :patch%>
   <%= link_to "Edit Task", edit_task_path(task.id)  %>
   <%= link_to "Delete", delete_task_path(task.id), data: { method: :delete, confirm: "Are you sure you want to delete #{task.name}?" } %>
 </li>
<% end %>

</section>

<%= link_to "Add New Task", new_task_path %>
