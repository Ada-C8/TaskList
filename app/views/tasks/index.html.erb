  <div class="your-tasks-container">
    <h2>YOUR TASKS</h2>
    <ol>
      <% @tasks.each do |task| %>
          <li>
            <%= link_to(task.name, task_path(task.id), alt: 'link to task#show')%>
            <em><br/>
              <%= link_to "Edit", edit_task_path(task.id) %>
              <%= link_to "Delete", delete_task_path(task.id), method: :delete, alt: 'link to task#destroy' %>
            </em></br/>
          </li>
      <% end %>
    </ol>
  </div>
