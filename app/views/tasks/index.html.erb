
<h2>Your Tasks</h2>
<ol>
  <% @tasks.each do |task| %>
    <% if task.status == "complete" %>
      <% print_status = "mark incomplete" %>
      <li class="complete">
      <%= link_to task.name, task_path(task.id), class: "complete" %>

    <% elsif task.completion_date <= Date.today() %>
      <% print_status = "mark complete" %>
      <li>
      <%= link_to task.name, task_path(task.id), class: "overdue" %>

    <% else %>
      <% print_status = "mark complete" %>
      <li>
      <%= link_to task.name, task_path(task.id) %>
    <% end %>
    <p>
      <%= task.completion_date %>
    </p>
    <ul>
      <li><%= link_to print_status, mark_task_path(task.id), method: :patch %></li>
      <li><%= link_to "edit", edit_task_path(task.id) %></li>
      <li><%= link_to "delete", delete_task_path(task.id), method: :delete, data: { confirm: "ARE YOU SURE?!" } %></li>
    </ul>
  </li>
  <% end %>
</ol>
