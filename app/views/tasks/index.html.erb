<h1> Lauren's Tasklist:</h1>

<main id="list">
  <h2> Tasks</h2>
  <ol >
    <% @tasks.each do |task| %>
    <li>
      <% if task.status == "complete" %>
      <strong class="complete"> <%= task.name %> </strong>
      <% else %>
      <strong> <%= task.name %> </strong> <p>
      <%= task.description %> : <%= task.completion_date %> </p>

      <p>
         <!-- <%= link_to  "Mark Complete", mark_complete_path(task.id), method: :patch %> | -->
         <%= link_to "Edit", edit_task_path(task.id) %> | <%= link_to "Delete", task, :method => :delete %>
         | <%= link_to "Complete", complete_task_path(task), method: :put %>

      </p>
      <% end %>
    </li>
  <% end %>
</ol>
</main>

</div>
