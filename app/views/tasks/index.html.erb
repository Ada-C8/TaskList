<body>
  <h1>Task List</h1>

  <nav>
    <li>
      <%= link_to "Add task", new_task_path, class: "link"%>
    </li>
    <li>
      All tasks
    </li>
  </ul>
</nav>

<div>
<h2>My tasks</h2>
  <ol>
    <% @tasks.each do |task|  %>
    <li>
      <h3><%=link_to task.title, task_path(task.id)%></h3>
      Description: <%= task[:description]%>
      <br>
      Due Date: <%=task[:due_date]%>
      <br>
      Status: <%=
      if task[:complete]==true
        "Done!"
      elsif task[:complete]==false
      "Incomplete"
      end
      %>
    </li>
    <%end%>
  </ol>

</div>
</body>
