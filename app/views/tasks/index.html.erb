<h1>List of Tasks</h1>

<div class="right_tasks">
  <ul class="tasks">
    <h4 class="task_header">Your Tasks</h4>

    <% counter = 1 %>
    <% @tasks.each do |task| %>
    <li>
      <!-- <%= task.name %> -->
      
      <div class="task_name">
        <%= "#{counter}. " %> <%=link_to(task.name, task_path(task.id)) %>
      </div>
      <% counter+=1 %>

      <div class="edit_delete">
        <%= link_to("Edit", edit_task_path(task[:id])) %>
        <%= link_to("Delete", delete_task_path(task[:id]), method: :delete) %>
      </div>
    </li>
    <% end %>

  </ul>
</div>

<div class="left_options">

  <div>
    <nav class="index_nav">
      <ul>
        <li><%= link_to "Add Task", new_task_path %></li>

        <li><%= link_to "All Tasks", tasks_path %></li>
      </ul>
    </nav>
  </div>

  <div>
    <img class="gif" src="https://media.giphy.com/media/YLHwkqayc1j7a/200.gif" alt="jafar gif">
  </div>

</div>
