
<div class="tasklist">


  <h2>Your Tasks</h2>

  <ol>
    <% @tasks.each do |task| %>
    <li>
      <%= link_to(task.name, task_path(task.id)) %>
      <%=button_to "Edit", edit_task_path(task.id), method: :get%>
      <%=button_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>


      <p> Mark Complete</p>
      </li>
      <% end %>
    </ol>

  </div>
