<div class="task-list big-chalk-border">
  <h1>Your Tasks</h1>
  <ol>
    <% @tasks.each do |task| %>
      <% link_status = task.status == "Complete" ? "Incomplete" : "Complete" %>
      <% due = task.completion_date <= Date.today ? "overdue" : "not_due_yet" %>
      <% strikethrough = task.status == "Complete" ? "strikethrough" : ""%>
      <li>
        <span class="<%= task.status %> <%= due %> <%= strikethrough %>"><strong><%= task.name %></strong></span>
        <br /><%= link_to "Mark #{link_status}", change_status_path(task.id), method: :patch %>
        | <%= link_to "Edit", edit_task_path(task.id), method: :get %>
        | <%= link_to "Delete", task_path(task.id), method: :delete, data: {:confirm=>'Are you sure?'} %>
      </li>
    <% end %>
  </ol>
</div>
