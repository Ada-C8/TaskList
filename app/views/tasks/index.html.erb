<div class="tasks container" id="index">
  <h2>Your Tasks</h2>
  <ol>
    <% @tasks.each_with_index do |task, i| %>
    <li class="task button <%= "completed" if task.status == true %>">
        <p>
          <strong><%= task.status ? "âœ“ #{task[:task]}" : (link_to "#{task[:task]}", task) %></strong>
        </p><br />
        <nav class="task-options">
          <ul>
            <li>
              <%= link_to "Edit", edit_task_path(task) %> |
            </li>
            <li>
              <%= link_to "Delete", task_path(task), method: :delete %>
            </li>
          </ul>
        </nav>
    </li>
    <% end %>
  </ul>
</div>
