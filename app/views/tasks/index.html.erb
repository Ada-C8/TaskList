
  <div class="task-list">
    <h2>Your Tasks</h1>

      <%if @tasks.count == 0%>

        <div class="wrap">
          <div class="glass">
            <div class="wine">
            </div>
            <div class="stem">
            </div>
            <div class="base">
            </div>

          </div>
          <h3 class="no_task">Your To Do List is empty.<br />Wine time!</h3>
        </div>
      <% else %>
        <ul>
          <% counter = 0 %>
          <% @tasks.each do |task| %>
            <% counter += 1 %>
            <%if task.completion_date == nil%>
              <li class="uncomplete_task"><%=counter%>. <%= task.name %></li>
            <% else %>
              <li class="completed_task"><%=counter%>. <%= task.name %></li>
            <% end %>
            <li class="task-options"><%= link_to((task.completion_date == nil ? "Mark completed" : "Unmark completed"), change_status_path(task.id), method: :patch, alt: 'link to') %> | <%= link_to("Edit", edit_task_path(task.id), alt: 'link to') %> | <%= link_to("Show", task_path(task.id), alt: 'link to') %> | <%= link_to("Delete", delete_task_path(task.id), method: :delete, data: {confirm: 'Are you sure you want to delete this task?' }) %></li>
          <% end %>
        </ul>
      <% end %>

  </div>
