<link href="https://fonts.googleapis.com/css?family=Baloo+Tammudu" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Vibur" rel="stylesheet">


<body>
  <header>
    <ul class="navigation">
      <li>Donut Forget!</li>
    </ul>
  </header>

  <section class="task-body">
    <div class="all-task-actions">
      <ul>
        <li><%= link_to "Add Task", new_task_path %></li>
        <li><%= link_to "All Tasks", tasks_path %></li>
      </ul>
    </div>

    <div class="task-list">
      <h2 class="task-heading">You Need To...</h2>
      <ul id="task-box">
        <% @tasks.each do |task| %>
          <li class="tasks">
            <img class="donut-image" src="http://www198.lunapic.com/editor/working/150584966072159?3882819102" /><%= task[:name] %>
          </li>
        <div class="task-actions">
          <li class="action"><%= link_to "Mark Complete", mark_complete_path(@task.name) %></li>
          <li class="action"><%= link_to "Edit Task", edit_task_path %></li>
          <li class="action"><%= link_to "Delete Task", delete_task_path %></li>
        </div>
        <% end %>
      </ul>
    </div>
  </section>

  <footer>
    &copy;Kimberley Mackenzie 2017
  </footer>
</body>
