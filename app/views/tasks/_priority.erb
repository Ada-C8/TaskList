
<% if !(input_category) %>
<h1><%="All Tasks" %></h1>
<% else %>

<h1><%="#{sorter}: #{input_category}" %></h1>
<% end %>


<section class="your_tasks">
<ol>


<% tasks.each do |task| %>



<% if !(task.completed)  %>
<li><strong><%= link_to(task.title, task_path(task.id)) %></strong> </li>
<article class="task_edits">
<%= link_to "mark complete", mark_complete_task_path(task.id), method: :patch %>
<%= link_to "edit", edit_tasks_path(task.id) %>
<%= link_to "delete", delete_task_path(task.id), method: :delete, data: { confirm: "ARE YOU SURE?!!?" } %></article>
<%else%>
<li><strong class="completed"><%= link_to(task.title, task_path(task.id)) %></strong></li>
<article class="task_edits">
  <%= link_to "mark incomplete", mark_complete_task_path(task.id), method: :patch %>
  <%= link_to "edit", edit_tasks_path(task.id) %>
  <%= link_to "delete", delete_task_path(task.id), method: :delete, data: { confirm: "ARE YOU SURE?!!?" } %>
</article>
<% end %>

<% end %>
</ol>
</section>
