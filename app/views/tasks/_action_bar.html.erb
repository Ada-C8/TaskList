<% if task.complete == true %>
  <%= link_to "Unmark Complete", unmark_complete_path(task[:id]), method: :patch %> 
<% elsif %>
  <%= link_to "Mark Complete", mark_complete_path(task[:id]), method: :patch %>
<% end %>
| <%= link_to "Edit", edit_task_path(task[:id]) %> | <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
