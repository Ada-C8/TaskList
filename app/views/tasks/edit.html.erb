<main>
    <section class="new-task-form">
      <h1>Edit Task</h1>
      <%= form_for @task, url: {action: "update"} do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>
        <%= f.label :description %>
        <%= f.text_field :description, required: true %>

        <!-- From a Codepen where checkbox nested in label is important.
             Can't use Rails helper for label-->
        <label for="task_done" class="control control-checkbox">
            Done?
            <%= f.check_box :done %>
            <div class="control_indicator"></div>
        </label>

        <%= f.submit "Update Task", class: "button" %>
      <% end %>
    </section>
</main>
