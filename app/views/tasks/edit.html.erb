<h2><%= @task.title %></h2>

<%= form_for @task do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :date %>
<%= f.text_field :date %>

<%= f.label :status %>
<%= f.text_field :status %>

<%= f.submit "Submit" %>
<% end %>
