<h1>Tasks#edit</h1>
<section>
  <%= form_for @task do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :status %>
    <%= f.text_field :status %>

    <%= f.label :completion_date %>
    <%= f.text_field :completion_date %>

    <%= f.submit %>
  <% end %>

</section>
