<h2>Edit erb</h2>
<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :due_date %>
  <%= f.text_field :due_date %>

  <%= f.label :status %>
  <%= f.text_field :status %>

  <%= f.submit "New Task"%>
<% end %>
