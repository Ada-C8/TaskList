<h2>edit</h2>

<%= form_for @task do |f| %>
  <%= f.label :task %>
  <%= f.text_field :task %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :due %>
  <%= f.date_select :due %>

  <%= f.submit 'Save' %>
<% end %>

